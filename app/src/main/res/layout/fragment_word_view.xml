<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".Views.WordView" android:orientation="vertical" android:gravity="center_horizontal">

    <Spinner
            android:layout_height="40dp" android:id="@+id/spinner_language"

            android:layout_width="match_parent"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp" style="@style/SearchEditText"/>
    <Button
            android:text="Dodaj"
            android:layout_width="225dp"
            android:layout_height="wrap_content" android:id="@+id/button" android:layout_marginTop="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/recycleView_word"/>

</LinearLayout>