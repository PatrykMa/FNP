<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout">

    <Spinner
            android:layout_width="0dp"
            android:layout_height="40dp" android:id="@+id/spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
    />
    <Spinner
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/spinner2"
            app:layout_constraintTop_toBottomOf="@+id/imageButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            style="@style/EditText" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinner"/>
    <ImageButton
            android:layout_width="49dp"
            android:layout_height="40dp" app:srcCompat="@drawable/ic_baseline_swap_vert_24px"
            android:id="@+id/imageButton"
            android:tint="@color/design_default_color_background"
            android:background="@drawable/rounded_black_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3"
            style="@style/EditText"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner2"/>
    <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@drawable/ic_baseline_keyboard_24px"
            android:id="@+id/imageButton_keyboard"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3" android:tint="@color/colorPrimaryDark"
            android:background="@drawable/rounded_white"/>
    <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@drawable/ic_baseline_mic_24px"
            android:id="@+id/imageButton_mic"
            app:layout_constraintEnd_toStartOf="@+id/imageButton_keyboard" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText3"
            android:tint="@color/design_default_color_background" android:background="@drawable/rounded_black_button"/>
    <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@drawable/ic_baseline_photo_camera_24px"
            android:id="@+id/imageButton_camera"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageButton_keyboard" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText3"
            android:tint="@color/design_default_color_background" android:background="@drawable/rounded_black_button"/>
    <Button
            android:text="Zapisz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageButton_keyboard"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.2" app:layout_constraintVertical_bias="0.19999999"/>
    <Button
            android:text="TÅ‚umacz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button3"/>
</androidx.constraintlayout.widget.ConstraintLayout>